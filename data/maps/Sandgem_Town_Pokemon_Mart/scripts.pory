script Sandgem_Town_Pokemon_Mart_EventScript_Employee
{
    lock()
    faceplayer()
    message(gText_HowMayIServeYou)
    waitmessage()
    pokemart(0)
    msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
    release()
    end()
}

